<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_db"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reggie.note4ppt.controller.TestDB">

    <TextView
        android:text="TextView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="adduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="42dp"
        android:id="@+id/button_adduser"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="deluser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_adduser"
        android:id="@+id/deluser" />

    <Button
        android:text="delclt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delclt"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addclt" />

    <Button
        android:text="addclt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/addclt"
        android:layout_alignBaseline="@+id/button_adduser"
        android:layout_alignBottom="@+id/button_adduser"
        android:layout_toEndOf="@+id/button_adduser" />

    <Button
        android:text="show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:id="@+id/show"
        android:layout_alignBaseline="@+id/addclt"
        android:layout_alignBottom="@+id/addclt"
        android:layout_toEndOf="@+id/addclt" />

    <Button
        android:text="delppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delclt"
        android:layout_alignStart="@+id/show"
        android:id="@+id/delppt" />

</RelativeLayout>
